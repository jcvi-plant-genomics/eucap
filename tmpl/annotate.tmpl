<TMPL_IF NAME="annotation_loop">
<h1>Gene Family Members and Annotation:</h1>
<table width="100%" class="contenttable">
<tbody>
<TMPL_LOOP NAME="annotation_loop">
  <tr class="tableHeader">
	<td><p>Delete?</p></td>
	<td><p>Locus</p></td>
	<td><p>Current Annotation</p></td>
	<td><p>Gene Name</p></td>
	<td><p>Alt Gene Name</p></td>
	<td colspan="2"><p>Gene Description</p></td>
  </tr>
  <tr class="tableRowEven">
	<td><p> <input type="checkbox" name="delete" value="<TMPL_VAR NAME="locus_id">"></p></td>
	<td><p><b> <TMPL_VAR NAME="locus_name"><input type="hidden" name="locus_id" value="<TMPL_VAR NAME="locus_id">"> </b></p></td>
	<td><p> <TMPL_VAR NAME="original_annotation"> </p></td>
	<td><p> <input type="text" name="gene_name_<TMPL_VAR NAME="locus_id">" value="<TMPL_IF NAME="gene_name"><TMPL_VAR NAME="gene_name"></TMPL_IF>"> </p></td>
	<td><p> <input type="text" name="alt_gene_name_<TMPL_VAR NAME="locus_id">" value="<TMPL_IF NAME="alt_gene_name"><TMPL_VAR NAME="alt_gene_name"></TMPL_IF>"> </p></td>
	<td colspan="2"><p> <input type="text" name="gene_description_<TMPL_VAR NAME="locus_id">" value="<TMPL_IF NAME="gene_description"><TMPL_VAR NAME="gene_description"></TMPL_IF>"> </p></td>
  </tr>

  <tr class="tableRowOdd">
	<td><p>Genomic Acc</p></td>
	<td><p>cDNA Acc</p></td>
	<td><p>Protein Acc</p></td>
	<td><p>Mutant Info</p></td>
	<td><p>Comment</p></td>
	<td><p>Struct Anno?</p></td>
	<td><p>Open Struct<br>Anno Page</p></td>
  </tr>

  <tr class="tableRowEven">
	<td><p> <input type="text" name="genbank_genomic_acc_<TMPL_VAR NAME="locus_id">" value="<TMPL_IF NAME="genbank_genomic_acc"><TMPL_VAR NAME="genbank_genomic_acc"></TMPL_IF>"> </p></td>
	<td><p> <input type="text" name="genbank_cdna_acc_<TMPL_VAR NAME="locus_id">" value="<TMPL_IF NAME="genbank_cdna_acc"><TMPL_VAR NAME="genbank_cdna_acc"></TMPL_IF>"> </p></td>
	<td><p> <input type="text" name="genbank_protein_acc_<TMPL_VAR NAME="locus_id">" value="<TMPL_IF NAME="genbank_protein_acc"><TMPL_VAR NAME="genbank_protein_acc"></TMPL_IF>"> </p></td>
	<td><p> <input type="text" name="mutant_info_<TMPL_VAR NAME="locus_id">" value="<TMPL_IF NAME="mutant_info"><TMPL_VAR NAME="mutant_info"></TMPL_IF>"> </p></td>
	<td><p> <input type="text" name="comment_<TMPL_VAR NAME="locus_id">" value="<TMPL_IF NAME="comment"><TMPL_VAR NAME="comment"></TMPL_IF>"> </p></td>
	<td align="center"><p><TMPL_IF NAME="has_structural_annotation">Yes<TMPL_ELSE>No</TMPL_IF></p></td>
	<td align="center"><p><input type="submit" name="" value="Go" onclick="set_action(this, '<TMPL_VAR NAME="locus_name">')"></p></td>
  </tr>
</TMPL_LOOP>
</tbody>
</table>
